<%- include('include/head') %>
<%- include('include/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o abaixo.</p>

      <%- include('include/messages') %>

      <div class="responsive-table">
        <table class="table my-3">
          <% if (contatos && contatos.length > 0) { %>
            <% contatos.forEach(contato => { %>
              <tr>
                <td><%= contato.nome %></td>
                <td><%= contato.sobrenome %></td>
                <td><%= contato.email %></td>
                <td><%= contato.telefone %></td>
                <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                <td><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6">Nenhum contato encontrado.</td>
            </tr>
          <% } %>
        </table>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('include/footer') %>
