<%- include('include/head') %> 
<%- include('include/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça seu login ou crie sua conta abaixo</p>

      <%- include('include/messages'); %>

      <div class="row">
        <div class="col-lg my-5">
          <h4>Faça seu cadastro</h4>
          <br />
          <p>Se você ainda não tem conta, se cadastre abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group  my-3">
              <label>Digite seu e-mail</label><br />
              <input
                type="email"
                class="form-control validar"
                id="exampleInputEmail1"
                name="email"
                placeholder="Seu e-mail"
              />
            </div>
            <div class="form-group my-3">
              <label>Digite sua senha</label><br />
              <input
                type="password"
                class="form-control validar"
                id="exampleInputEmail1"
                name="password"
                placeholder="Sua senha"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Criar minha conta
            </button>
          </form>
        </div>

        <div class="col-lg my-5">
          <h4>Faça seu login</h4>
          <br />
          <p>Se você já uma tem conta, faça login abaixo:</p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group my-3">
              <label>Digite seu e-mail</label><br />
              <input
                type="email"
                class="form-control validar"
                id="exampleInputEmail1"
                name="email"
                placeholder="Seu e-mail"
              />
            </div>
            <div class="form-group my-3">
              <label>Digite sua senha</label><br />
              <input
                type="password"
                class="form-control validar"
                id="exampleInputEmail1"
                name="password"
                placeholder="Sua senha"
              />
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('include/footer') %>
